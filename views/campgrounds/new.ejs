<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align:center;">Welcome to Yelpcamp</h1>
        <div style="width:30%; margin: 25px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input type="text" placeholder="Campground name" name="name" class="form-control"></input>
                </div>
                <div class="form-group">
                    <input type="number" placeholder="Campground price" name="price" class="form-control" min="0.01" step="0.01"></input>
                </div>
                <div class="form-group">
                    <input type="text" placeholder="Campground image" name="image" class="form-control"></input>
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" placeholder="Yosemite National Park, CA">
                </div>
                <div class="form-group">
                    <input type="text" placeholder="Campground description" name="description" class="form-control"></input>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-large btn-block">Create a new campground</button>
                </div>
            </form>
            <a href="/campgrounds" >Back to all campgrounds</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>